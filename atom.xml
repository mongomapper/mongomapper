---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>MongoMapper</title>
  <link href="http://mongomapper.com/atom.xml" rel="self"/>
  <link href="http://mongomapper.com/"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://mongomapper.com/</id>
  {% for post in site.posts %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="http://mongomapper.com{{ post.url }}"/>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>http://mongomapper.com{{ post.id }}</id>
    <content type="html">{{ post.content | xml_escape }}</content>
    <author>
      <name>{{ post.author }}</name>
    </author>
  </entry>
  {% endfor %}
</feed>
